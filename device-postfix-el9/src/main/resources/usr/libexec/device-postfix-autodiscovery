#!/bin/bash

#
# Postfix Autodiscovery
# =====================
#
# This script autogenerates the configuration for a postfix server.

set -e
umask 0022

myhostname=$(cat /etc/hostname)


#
# Handle the cleanup
# ------------------
cleanup_before_exit () {
  if [ -d "${tmpdir}" ]; then
    rm -rf "${tmpdir}"
  fi
}
# be in a temporay workspace (this works on linux and macosx)
tmpdir=`mktemp -d 2>/dev/null || mktemp -d -t 'tmpdir'`
# trap catches the exit signal and runs the specified function
trap cleanup_before_exit EXIT
# be in our directory
cd "${tmpdir}"


#
# Generate Config
# ---------------
#

cat >> "main.cf" <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

EOF

cat >> "master.cf" <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

EOF


#
# Handle scripts
# --------------
#

find "$0.d" -type f -executable | sort | \
while read x; do
  "$x" "${1}" < /dev/null || touch error;
done


#
# Switch config into place
# ------------------------
#

install -m 640 "main.cf" "/etc/postfix/main.cf"
install -m 640 "master.cf" "/etc/postfix/master.cf"


